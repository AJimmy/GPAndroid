<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:background="#f4f4f4"
        >

    <ImageView
            android:id="@+id/item_news_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher"
            android:layout_margin="20dp"
            />

    <TextView
            android:id="@+id/item_news_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="subject"
            android:singleLine="true"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/item_news_cover"
            />

    <TextView
            android:id="@+id/item_news_changed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="changed"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            />

    <TextView
            android:id="@+id/item_news_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="summary"
            android:textSize="14sp"
            android:layout_below="@id/item_news_subject"
            android:layout_toRightOf="@id/item_news_cover"
            />
</RelativeLayout>